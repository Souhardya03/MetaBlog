<!DOCTYPE html>
<html lang="en">
<%- include('../common/head.ejs') %>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap");
    .blog {
        font-family: "Roboto Condensed", sans-serif;
    }

    input:not(:placeholder-shown) + label,
    textarea:valid + label {
        transform: translateY(-0.9rem) scale(0.8);
        background: hsla(0, 0%, 100%, 0.8);
    }
</style>
<body class="bg-[#e4e1e1] mb-14 mt-12">
    <%- include('../common/nav.ejs') %>
    <div class="flex justify-center px-2 items-center w-full blog flex-col flex-wrap">
        <div class="text-center text-5xl mt-10 text-cyan-600 font-semibold">
            Create <span class="text-blue-400 text-3xl font-medium">your Blog</span>
        </div>
        <div
            class="block rounded-lg bg-[hsla(0,0%,100%,0.8)] px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] md:py-16 mt-[14px] backdrop-blur-[30px] w-full shrink-0 grow-0 basis-auto md:px-3 lg:mb-0 lg:w-2/3 lg:px-6">
            <form
                method="post"
                action="/api/blog/add-new"
                enctype="multipart/form-data">
                <div class=" overflow-auto">
                    <div
                        class="relative mt-2 mb-6"
                        data-te-input-wrapper-init>
                        <input
                            type="text"
                            name="title"
                            class="peer block min-h-[auto] w-full rounded border-2 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 peer-focus:text-primary data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none"
                            id="exampleInput90"
                            required
                            placeholder=" " />
                        <label
                            class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] peer-focus:bg-[hsla(0,0%,100%,0.8)] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none"
                            for="exampleInput90"
                            >Title
                        </label>
                    </div>
                    <div
                        class="relative mb-6"
                        data-te-input-wrapper-init>
                        <input
                            type="file"
                            name="thumbnail"
                            class="peer block min-h-[auto] w-full rounded border-2 bg-transparent py-2 px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 peer-focus:text-primary data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none"
                            id="exampleInput91"
                            required
                            placeholder=" " />
                        <label
                            class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] bg-[hsla(0,0%,100%,0.8)] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out -translate-y-[0.9rem] scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none"
                            for="exampleInput91"
                            >Thumbnail
                        </label>
                    </div>
                    <div
                        class="relative mb-6"
                        data-te-input-wrapper-init>
                        <textarea
                            name="content"
                            id="content"
                            ></textarea>
                    </div>
                </div>
                <button
                    type="submit"
                    class="mb-6 w-full rounded bg-sky-500 text-white px-6 pt-2.5 pb-2 text-xs font-medium uppercase leading-normal lg:mb-0">
                    Create
                </button>
            </form>
        </div>
    </div>
    <%- include('../common/bottomNav.ejs') %>
    <script
        src="https://cdn.tiny.cloud/1/yknukjnwn8r02kpw1bhfr3ve6d7394jlv4bvnqzkd8y9pekx/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            tinymce.init({
                selector: "textarea#content",
                plugins: "advlist autolink lists link image charmap print preview hr anchor pagebreak",
                toolbar_mode: "floating",
            });
        });
    </script>
</body>
</html>
