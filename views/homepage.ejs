<!DOCTYPE html>
<html lang="en">
	<%- include('./common/head.ejs') %>
	<style>
		@import url("https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap");
		.home {
			font-family: "Kanit", sans-serif;
		}
	</style>
	<body class="mt-12 mb-14">
		<%- include('./common/nav.ejs') %>
		<div class="flex flex-col home items-center">
			<div class="text-center text-4xl mt-8 text-blue-500">
				Latest <span class="text-green-400">Posts</span>
			</div>
			<div class="grid lg:grid-cols-5 md:grid-cols-3 grid-cols-2 lg:gap-2 gap-1 lg:px-10 p-2 lg:p-4 w-full h-full">
				<% blogs.forEach(blog => { %>
				<div
					class="border border-gray-300 overflow-hidden p-3 w-full rounded-md h-[41vh] md:h-[37vh] lg:h-[45vh]">
					<div class="rounded-md w-full h-[20vh] lg:h-[25vh]">
						<img
							src="<%=blog.thumbnail%>"
							class="object-cover rounded-md h-full w-full"
							alt="" />
					</div>
					<div class="mt-3 lg:h-[12vh] h-[12vh] md:h-[10vh] lg:text-xl md:text-[1.2rem] text-sm font-medium w-full">
						<a href="/api/blog/<%= blog._id %>">
							<%= blog.title.substring(0,65) %>
							<span class="lg:text-2xl">...</span>
						</a>
					</div>
					<div class="lg:text-xs text-[0.6rem] flex justify-between mt-2">
						<div class="flex items-center gap-1">
							<div class="">
								<i class="fa-solid fa-circle-user"></i>
							</div>
							<div><%- blog.author.fullName %></div>
						</div>
						<div class="flex items-center gap-1">
							<div class="">
								<i class="fa-solid fa-calendar-days"></i>
							</div>
							<div><%- new Date(blog.createdAt).toLocaleDateString() %></div>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
		<%- include('./common/bottomNav.ejs') %>
	</body>
</html>
